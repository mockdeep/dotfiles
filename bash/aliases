# productivity stuff
alias jnl='vim ${DOC_PATH}/journal/`date +%Y-%m-%d`.txt'

function jrnl {
  today=`date +%Y-%m-%d`
  filepath="${DOC_PATH}/journal"
  i=0
  while [ -e "${filepath}/${today}.${i}.txt" ]; do
    let i=i+1
  done
  vim "${filepath}/${today}.${i}.txt"
}

